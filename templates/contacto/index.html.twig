{% extends 'base.html.twig' %}

{% block title %}Hello ContactoController!{% endblock %}

{% block body %}

<form action="{{ path('app_contacto') }}" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Direccion de E-mail.</label>
    <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp">
    <small id="emailHelp" class="form-text text-muted">No compartiremos tu email.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputMessage1">Mensaje.</label>
    <textarea class="form-control" id="exampleInputMessage1" name="message" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Enviar.</button>
</form>

{% endblock %}
