{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.nombre }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ user.apellidos }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Fechanac</th>
                <td>{{ user.fechanac ? user.fechanac|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NumTar</th>
                <td>{{ user.numTar }}</td>
            </tr>
            <tr>
                <th>Titular</th>
                <td>{{ user.titular }}</td>
            </tr>
            <tr>
                <th>CodSeg</th>
                <td>{{ user.codSeg }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ user.direccion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
