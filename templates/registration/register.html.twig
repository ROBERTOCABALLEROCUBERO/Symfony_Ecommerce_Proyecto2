{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nombre) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.apellidos) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.fechanac, {
            label: 'Fecha de nacimiento'
        }) }}
        {{ form_row(registrationForm.numTar, {
            label: 'Número de tarjeta'
        }) }}
        {{ form_row(registrationForm.titular) }}
        {{ form_row(registrationForm.codSeg, {
            label: 'Código de seguridad'
        }) }}
        {{ form_row(registrationForm.direccion) }}
        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
